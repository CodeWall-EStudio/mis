<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/subject_header"
                android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="30dp"
              android:drawableLeft="@drawable/users"
              android:text="这是标题呀..."
              android:singleLine="true"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:id="@+id/title" android:gravity="center_vertical"/>
    <TextView android:layout_width="match_parent" android:layout_height="30dp"
              android:layout_weight="1"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:text="这是内容..."
              android:singleLine="true"
              android:id="@+id/creator" />
    <TextView android:layout_width="match_parent" android:layout_height="30dp"
              android:layout_weight="1"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:text="这是内容..."
              android:singleLine="true"
              android:id="@+id/createTime" android:gravity="center_vertical"/>
    <TextView android:layout_width="match_parent" android:layout_height="30dp"
              android:layout_weight="1"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:text="这是内容..."
              android:singleLine="true"
              android:id="@+id/lastUpdateTime" android:gravity="center_vertical"/>
</LinearLayout>