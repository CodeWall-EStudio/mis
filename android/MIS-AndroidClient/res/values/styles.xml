        <item name="android:activityOpenEnterAnimation">@anim/activity_push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_push_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_push_left_in</item>
