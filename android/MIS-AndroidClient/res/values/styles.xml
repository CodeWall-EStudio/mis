    <style name="splash_theme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/Activity_PushLeftRight_Animation</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="buttonBlue">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/primary_color</item>
    </style>


    <style name="app_theme" parent="@style/Theme.Sherlock.Light">
    </style>
    <style name="plainButton">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:radius">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/plain_button_bg</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="list_style">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@color/listbg</item>
    </style>
    <style name="item_style">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>